<p id="notice"><%= notice %></p>

<h1>Listing Post Types</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Begin html</th>
      <th>End html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_types.each do |post_type| %>
      <tr>
        <td><%= post_type.icon %></td>
        <td><%= post_type.name %></td>
        <td><%= post_type.begin_html %></td>
        <td><%= post_type.end_html %></td>
        <td><%= link_to 'Show', post_type %></td>
        <td><%= link_to 'Edit', edit_post_type_path(post_type) %></td>
        <td><%= link_to 'Destroy', post_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

