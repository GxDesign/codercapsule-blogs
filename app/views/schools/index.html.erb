<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street address</th>
      <th>Street number</th>
      <th>Route</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Email</th>
      <th>Username</th>
      <th>Blog url</th>
      <th>Password</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.street_address %></td>
        <td><%= school.street_number %></td>
        <td><%= school.route %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.zip %></td>
        <td><%= school.country %></td>
        <td><%= school.email %></td>
        <td><%= school.username %></td>
        <td><%= school.blog_url %></td>
        <td><%= school.password %></td>
        <td><%= school.description %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

